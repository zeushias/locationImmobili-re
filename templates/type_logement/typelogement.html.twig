{% extends 'base.html.twig' %}

{% block head %}

    {% block meta %}
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">    
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    {% endblock %}

    {% block stylesheets %}
        <!-- Bootstrap core CSS -->
        <link href="./css/css2" rel="stylesheet">
        <link href="./css/bootstrap.min.css" rel="stylesheet">

        <!-- Additional CSS Files -->
        <link rel="stylesheet" href="./css/fontawesome.css">
        <link rel="stylesheet" href="./css/templatemo-villa-agency.css">
        <link rel="stylesheet" href="./css/owl.css">
        <link rel="stylesheet" href="./css/animate.css">
        <link rel="stylesheet" href="./css/swiper-bundle.min.css">
    {% endblock %}

{% endblock %}

{% block title %}Type de logement{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Enrégistrement des types de logement</h1>
     
     {{ controller_name }}
    

    <div class="contact-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-5">
                    
                    <form id="typelogementForm" action="/typelogement/create" method="post">
                        <div class="row">
                                                        
                            <div class="col-lg-12">
                                <fieldset>
                                    <label for="libelle">Libellé</label>
                                    <input type="text" name="libelle" id="libelle" placeholder="Libellé..." autocomplete="on">
                                </fieldset>
                            </div>



                            <div class="col-lg-12">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="orange-button">Valider</button>
                                    <button type="reset" id="form-reset" class="orange-button">Annuler</button>
                                </fieldset>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


</div>
{% endblock %}
