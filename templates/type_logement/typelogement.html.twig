

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Enrégistrement des types de logement</h1> 

    <div class="container">
            <a href="/typelogement">Retour</a>
    </div>

    {{message}}

    <div class="contact-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-5">
                    
                    <form id="typelogementForm" action="/typelogement/create" method="post">
                        <div class="row">
                                                        
                            <div class="col-lg-12">
                                                                
                                <fieldset hidden>
                                    <label for="id">id</label>
                                    <input type="text" name="id" id="id" placeholder="id..." autocomplete="on"
                                        {% if typeLogement is not same as null and typeLogement is not empty %} value="{{ typeLogement.id }}" {% endif %} />
                                </fieldset>

                                <fieldset>
                                    <label for="libelle">Libellé</label>
                                    <input type="text" name="libelle" id="libelle" placeholder="Libellé..." autocomplete="on"
                                        {% if typeLogement is not same as null and typeLogement is not empty %} value="{{ typeLogement.libelle }}" {% endif %} />
                                </fieldset>
                                
                            </div>



                            <div class="col-lg-12">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="orange-button">Valider</button>
                                    <button type="reset" id="form-reset" class="orange-button">Annuler</button>
                                </fieldset>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


</div>
{% endblock %}
