{% extends 'base.html.twig' %}



{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Enrégistrement des utilisateurs</h1> 

    {{message}}

    <div class="contact-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-5">
                    
                    <form id="utilisateurForm" action="/utilisateur/create" method="post">
                        <div class="row">
                                                        
                            <div class="col-lg-12">
                                                                
                                <fieldset>
                                    <label for="id">id</label>
                                    <input type="text" name="id" id="id" placeholder="id..." autocomplete="on"
                                        {% if user is not same as null and user is not empty %} value="{{ user.id }}" {% endif %} />
                                </fieldset>

                                <fieldset>
                                    <label for="login">Login</label>
                                    <input type="text" name="login" id="login" placeholder="Libellé..." autocomplete="on"
                                        {% if user is not same as null and user is not empty %} value="{{ user.login }}" {% endif %} />
                                </fieldset>

                                <fieldset>
                                    <label for="nomComplet">Nom & Prénoms</label>
                                    <input type="text" name="nomComplet" id="nomComplet" placeholder="Nom & Prénoms..." autocomplete="on"
                                        {% if user is not same as null and user is not empty %} value="{{ user.nomComplet }}" {% endif %} />
                                </fieldset>

                                <fieldset>
                                    <label for="email">Email</label>
                                    <input type="email" name="email" id="email" placeholder="Email..." autocomplete="on"
                                        {% if user is not same as null and user is not empty %} value="{{ user.email }}" {% endif %} />
                                </fieldset>

                                <fieldset>
                                    <label for="pass">Mot de passe</label>
                                    <input type="password" name="pass" id="pass" placeholder="Mot de passe..." autocomplete="on"
                                        {% if user is not same as null and user is not empty %} value="{{ user.pass }}" {% endif %} />
                                </fieldset>
                                
                            </div>



                            <div class="col-lg-12">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="orange-button">Valider</button>
                                    <button type="reset" id="form-reset" class="orange-button">Annuler</button>
                                </fieldset>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


</div>
{% endblock %}
