{% extends "base.html.twig" %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .col-lg-7 { flex: 0 0 auto; width: 58.33333333%;}
    .col-lg-5 { flex: 0 0 auto; width: 41.66666667%;}
     .col-lg-12 {
    flex: 0 0 auto;
    width: 100%;}
</style>

<div class="example-wrapper">
    <h1>Authentification</h1> 

    {{message}}

    <div class="contact-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-5">
                    
                    <form id="connexionForm" action="/connexion/authentification" method="post" class ="">
                        <div class="row">
                                                        
                            <div class="col-lg-12">
                                                                
                                <fieldset>
                                    <label for="login">Login</label>
                                    <input type="text" name="login" id="login" placeholder="Login..." autocomplete="on" />
                                </fieldset>

                                <fieldset>
                                    <label for="pass">Mot de passe</label>
                                    <input type="password" name="pass" id="pass" placeholder="Mot de passe..." autocomplete="on" />
                                </fieldset>
                                
                            </div>


                            <div class="col-lg-12">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="orange-button">Valider</button>
                                    <button type="reset" id="form-reset" class="orange-button">Annuler</button>
                                </fieldset>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


</div>
{% endblock %}
